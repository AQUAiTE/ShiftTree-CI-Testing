{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES6",

    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "paths": {
      "@/*": ["./src/*"]
    },

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/**/*"],
  "ts-node": {
    "experimentalResolver": true
  }
}
